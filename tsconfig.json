{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "build",
        "allowJs": false,
        "pretty": true,
        "strictNullChecks": true,
        "declaration": true,
        "resolveJsonModule": true,
        "lib": [
            "es2017"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.json",
    ]
}
